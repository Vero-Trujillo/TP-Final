<%- include('../partials/head', { usuario: usuario }) %>

    <section class="registro">
        <img src="imagenes/Fondo formularios.jpg" alt="">

        <div class="registro-formulario">
            <h2 class="registroTitulo">Registrate</h2>

            <form id="registroForm" action="/usuarios/nuevoUsuario" method="post">
                <label>Nombre de usuario:</label>
                <input type="text" name="username" required placeholder="Ingrese su nombre">

                <label>Correo electrónico:</label>
                <input type="text" name="email" required placeholder="Ingrese su correo electrónico">

                <label>Contraseña:</label>
                <div>
                    <input id="password" type="password" name="password" required placeholder="Ingrese su contraseña">
                    <span id="cambiarPassword" class="cambiar-password"><i class="fas fa-eye"></i></span>
                </div>
                <p id="passwordMje" style="color: red;"></p>

                <label>Confirmar contraseña:</label>
                <div>
                    <input type="password" id="passwordconfirmation" name="passwordconfirmation" required
                        placeholder="Reingrese su contraseña">
                    <span id="cambiarConfirmarPassword" class="cambiar-password"><i class="fas fa-eye"></i></span>
                </div>
                <p id="confirmPasswordMje" style="color: red;"></p>

                <button type="submit">Registrarse</button>
            </form>

            <div class="linkRegistro">
                <p>¿Ya tenés cuenta? <a href="/usuarios/login">Iniciá Sesión</a></p>
            </div>
        </div>          
</section>

    <%- include('../partials/footer')%>